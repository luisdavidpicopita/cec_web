<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Áreas del CEC</title>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="/main.css">
  <link rel="icon" href="img/icono.png" type="image/png">
</head>

<body>
  <%- include('partials/header') %>
  <%- include('partials/ribbon') %>

  
<div class="container mt-5 mb-5">
  <% if (areas && areas.length > 0) { %>
    <% for (let seccionNum = 1; seccionNum <= 6; seccionNum++) {
         const items = areas.filter(tema => tema.seccion === seccionNum);
         if (items.length > 0) { %>

      <section id="<%= seccionNum %>" class="mb-5">
        <hr class="mb-4" />

        <% items.forEach(tema => { %>
          <div class="text-center mb-4 mx-auto" style="max-width: 700px;">
            <!-- Título centrado -->
            <h2 class="fw-bold mb-3"><%= tema.titulo %></h2>

            <!-- Imagen centrada y recortada -->
              <% if (tema.foto) { %>
            <div class="mb-3 overflow-hidden rounded mx-auto" style="max-width: 700px; height: 400px; width: 100%;">
  <img src="<%= tema.foto %>" alt="<%= tema.titulo %>"
       class="w-100 h-100"
       style="object-fit: cover;">
</div>
<% } %>



            <!-- Texto justificado -->
            <div class="text-start">
              <p class="fs-6 fw-light lh-lg" style="text-align: justify;">
                <%= tema.texto_largo || '' %>
              </p>
            </div>
          </div>
        <% }) %>
      </section>

    <% }} %>
  <% } else { %>
    <p class="text-center mt-5">No hay temas registrados en este momento.</p>
  <% } %>
</div>

  <%- include('partials/footer') %>
</body>

</html>
